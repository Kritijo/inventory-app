<form action="/book/<%= book.id %>/update" method="POST">
  <label>Title</label>
  <input value="<%=book.title%>" name="title" required />
  <label>Author</label>
  <input value="<%=book.author%>" name="author" />
  <label>Description</label>
  <input value="<%=book.description%>" name="description" />
  <div>
    <button type="submit">Save changes</button>
    <button type="button" onclick="hideForm()">Cancel</button>
  </div>
</form>

