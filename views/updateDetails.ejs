<form action="/book/<%= book.id %>/update" method="POST">
  <label for="title">Title</label>
  <input id="title" value="<%=book.title%>" name="title" type="text" maxlength="50" required />
  <label for="author">Author</label>
  <input id="author" value="<%=book.author%>" type="text" maxlength="30" name="author" />
  <label for="description">Description</label>
  <input id="description" value="<%=book.description%>" name="description" type="text" maxlength="500" />
  
  <label for="genres">Genre</label>
  <select id="genres" name="genres" multiple required>
  <%allGenres.forEach(g=>{%>
    <option value="<%= g.id %>" 
      <%= genres.some(selected => String(selected.id) === String(g.id)) ? "selected" : "" %>>
      <%= g.name %>
    </option>
  <%})%>
  </select>

  <label for="admin">Admin Password</label>
  <input
  id="admin"
  type="password"
  name="adminPassword"
  placeholder="Enter admin password"
  required
  />

  <div>
    <button type="submit">Save changes</button>
    <button type="button" onclick="hideForm()">Cancel</button>
  </div>
</form>

